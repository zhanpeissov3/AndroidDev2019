<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedActivity"

    >


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="34dp">

        <ImageView
            android:id="@+id/PersonPhoto"
            android:layout_width="277dp"
            android:layout_height="210dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPersonDescription"
            android:layout_width="wrap_content"
            android:layout_height="326dp"
            android:layout_below="@+id/PersonPhoto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="143dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="36dp"
            android:padding="16dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewPersonName"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PersonPhoto"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="30dp"
            android:padding="16dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PersonPhoto" />

        <Button
            android:id="@+id/Share_button"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PersonPhoto"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="17dp"
            android:layout_toStartOf="@+id/textViewPersonName"
            android:text="Share"
            app:layout_constraintEnd_toStartOf="@+id/textViewPersonName"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PersonPhoto" />

        <TextView
            android:id="@+id/dateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_below="@+id/PersonPhoto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="113dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/textViewPersonDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewPersonName"
            app:layout_constraintVertical_bias="0.698" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>



